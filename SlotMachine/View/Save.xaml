<Window x:Class="SlotMachine.View.Save"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:SlotMachine.ViewModels"
        mc:Ignorable="d"
        Title="Save"
        Height="272"
        Width="354"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E1E1E">

    <Window.Resources>
        <!-- Modern Button Style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FF444444" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#FF666666" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="OverridesDefaultStyle" Value="True" />
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Zobrazení existujících savů -->
        <ListBox Grid.Row="0" 
                 ItemsSource="{Binding SaveFiles}" 
                 Background="#FF444444" 
                 Foreground="White" 
                 BorderBrush="#FF666666" 
                 BorderThickness="1" 
                 Padding="5" 
                 FontSize="14" 
                 Margin="0,0,0,5" />

        <!-- TextBox pro zadání jména souboru -->
        <TextBox x:Name="txtPrice" 
                 Text="{Binding SaveFileName, UpdateSourceTrigger=PropertyChanged}" 
                 Grid.Row="1" 
                 Margin="0,0,0,15" 
                 Background="#FF444444" 
                 Foreground="White" 
                 BorderBrush="#FF666666" 
                 BorderThickness="1" 
                 Padding="5" 
                 FontSize="14"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Save" 
                    Command="{Binding SaveCommand}" 
                    Width="120" 
                    Margin="0,0,10,0" />
            <Button Content="Cancel" 
                    Command="{Binding CancelCommand}"  
                    Width="120" />
        </StackPanel>
    </Grid>
</Window>
